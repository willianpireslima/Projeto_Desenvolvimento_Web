<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="bootstrap.min_5.3.2.css" />
    <link rel="stylesheet"  type="text/css" href="estilo.css">
    <title>Signup</title>
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
            </div>
        </nav>
    </header>

    <section class="main container mt-5">
        <!-- form login -->
        <form class="formLogin" id="formLogin">
            <h1 class="text-center mb-3 fw-normal"><strong>Login</strong></h1>
            
            <div class="form-floating mt-5">
                <input type="email" class="form-control" id="inputEmail" placeholder="nome@exemplo.com">
                <label for="inputEmail">Endere&ccedil;o de Email</label>
            </div>
           
            <div class="form-floating mt-2">
                <input type="password" class="form-control" id="inputSenha" placeholder="Password">
                <label for="inputSenha">Senha</label>
            </div>
            
            <button class="btn btn-primary mt-2" type="submit" id="signinButton">Login</button>

            <div class="mt-3 row">
                <label for="staticEmail" class="col-sm-5 col-form-label">Não tem uma conta cadastre-se?</label>
                <div class="col-sm-7">
                    <button class="btn btn btn-secondary w-100 py-2" type="submit" id="signupButton">Criar Conta</button>
                </div>
            </div>
        </form>
    </section>
    
    <footer class="footer bg-body-tertiary text-center text-lg-start fixed-bottom">
        <div class="text-center p-3">© 2024 Copyright NestJs And Prisma:</div>
    </footer>
    
    <script src="script.js"></script>
</body>
</html>
