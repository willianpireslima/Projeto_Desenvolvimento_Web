<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="estilo.css" />
    <title>Document</title>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>Create</h2><br>
        <form action="/insert" method="post">
          <div class="form-group">
            <label for="nome">Nome:</label><br>
            <input type="text" id="nome" name="nome" required><br>
          </div>
  
          <div class="form-group">
            <label for="genero">Gênero:</label><br>
            <div>
              <label for="male" class="radio-inline">
                <input type="radio" name="genero" id="male" required value="M"> Masculino
              </label>
              <label for="female" class="radio-inline">
                <input type="radio" name="genero" id="female" required value="F"> Feminino
              </label> 
            </div>
          </div>
              
          <div class="form-group">
            <label for="numero">Número:</label><br>
            <input type="text" id="numero" name="numero" required><br>
          </div>
  
          <div class="form-group">
            <label for="nasc">Data de Nascimento:</label><br>
            <input type="date" id="nasc" name="nasc" required><br>
          </div>
  
          <input type ="reset" value="Reset" class="btn btn-danger">
          <input type="submit" value="Adcionar" class="btn btn-primary">
        </form>
      </div>
      
      <div class="col-md-9">
        <h2>Read</h2><br>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nome</th>
              <th>Gênero</th>
              <th>Número</th>
              <th>Data de Nascimento</th>
            </tr>
          </thead>
          <tbody>
            <% if (datapedido && datapedido.length > 0) { %>
              <% datapedido.forEach(function(usuario) { %>
                <tr>
                  <td><%= usuario.id %></td>
                  <td><%= usuario.nome %></td>
                  <td><%= usuario.genero %></td>
                  <td><%= usuario.numero %></td>
                  <td><%= usuario.nasc %></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6">Nenhum usuário encontrado</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-6  mx-5">
        <h2>Update</h2><br>
        <form action="/update" method="post">
          <div class="form-group">
            <label for="id">ID:</label><br>
            <input type="text" id="id" name="id" required><br>
          </div>
        
          <div class="form-group">
            <label for="column">Escolha a coluna para atualizar:</label><br>
            <select id="column" name="column" required>
              <option value="nome">Nome</option>
              <option value="genero">Gênero (M ou F)</option>
              <option value="numero">Número</option>
              <option value="nasc">Data de Nascimento</option>
            </select><br>
          </div>
        
          <div class="form-group">
            <label for="value">Novo valor:</label><br>
            <input type="text" id="value" name="value" required><br>
          </div>
        
          <input type ="reset" value="Reset" class="btn btn-danger">
          <input type="submit" value="Atualizar" class="btn btn-primary">
        </form>      
      </div>
    
      <div class="col-md-6 mx-3">
        <form action="/delete" method="post">
          <h2>Delete</h2><br>
          <div class="form-group">
            <label for="id">ID:</label><br>
            <input type="text" id="id" name="id" required><br>
          </div>

          <input type ="reset" value="Reset" class="btn btn-danger">
          <input type="submit" value="Deletar" class="btn btn-primary">
        </form>
      </div>
    </div>  
  </div>  
</body>
</html>
